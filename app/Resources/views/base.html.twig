<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/yourbooksmain/css/normalize-2.1.3.css') }}">
            {% stylesheets
                'bundles/yourbooksmain/css/*.css'
                'bundles/yourbooksmain/less/*.less'
                filter='lessphp, cssrewrite'
                output='css/style.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}">
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
        <script src="{{ asset('bundles/yourbooksmain/js/modernizr-2.7.0.min.js') }}"></script>
    </head>
    <body>
        <header>
            <img src="" alt="logo_yourbooks" title="Logo YourBooks">
            <nav role="navbar">
                <ul>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li><a href="{{ path('your_books_user_profile_show') }}">Welcome {{ app.user.username }}</a></li>
                        <li><a href="{{ path('your_books_user_security_logout') }}">Se déconnecter</a></li>
                    {% else %}
                        <li class="connect">
                            <a href="{{ path('your_books_user_security_login') }}">Se connecter</a>
                            <a href="{{ path('your_books_user_registration_register') }}">Créer son compte</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </header>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <footer>
            <ul>
                <li><a href="#">Espace presse</a></li>
                <li><a href="#">L'équipe YourBooks</a></li>
                <li><a href="#">Charte d'écriture</a></li>
                <li><a href="#">Contact</a></li>
                <li><a href="#">Nos engagements</a></li>
                <li><a href="#">Nos partenaires</a></li>
                <li><a href="#">Mentions légales</a></li>
                <li><a href="#">Devenez lecteur</a></li>
                <li><a href="#">Devenez éditeur partenaire</a></li>
            </ul>
        </footer>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ asset('bundles/yourbooksmain/js/jquery-1.10.2.min.js') }}"><\/script>')</script>
    </body>
</html>
