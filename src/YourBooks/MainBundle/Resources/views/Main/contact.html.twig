{% extends 'YourBooksMainBundle::base.html.twig' %}
{% block title %}{{ parent() }}Contact{% endblock %}
{% block body %}
    <div class="contactForm">
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-{{ label }}">
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}
        <h1>Contact</h1>
        <p>Si vous souhaitez nous faire part de vos remarques ou si vous avez des
            questions n'hésitez pas, nous sommes à votre disposition.</p>
        <form method="post" {{ form_enctype(form) }}>
            {{ form_widget(form.name, {'attr': {'placeholder': 'Nom'}}) }}
            {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
            {{ form_widget(form.subject, {'attr': {'placeholder': 'Sujet'}}) }}
            {{ form_widget(form.message, {'attr': {'placeholder': 'Message'}}) }}
            {{ form_rest(form) }}
            <div class="submit">
                <input type="submit">
            </div>
        </form>
    </div>
{% endblock %}
