        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Confirmez votre mot de passe'}}) }}
        {{ form_row(form._token) }}
        <div class="submit">
            <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
