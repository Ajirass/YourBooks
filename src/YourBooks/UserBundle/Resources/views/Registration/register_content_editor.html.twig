<div class="become_editor">
    <h1>Devenir Ã©diteur partenaire</h1>
    <form action="{{ path('your_books_reader_registration_register', {'account' : 'editor'}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
        {{ form_errors(form.username) }}
        {{ form_widget(form.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
        {{ form_widget(form.company, {'attr': {'placeholder': 'Nom de l\'Entreprise'}}) }}
        {{ form_errors(form.plainPassword.second) }}
        {{ form_errors(form.plainPassword.first) }}
