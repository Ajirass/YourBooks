<div class="become_reader">
    <h1>Postuler en tant que lecteur</h1>
    <form action="{{ path('your_books_reader_registration_register', {'account' : 'reader'}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
        <div class="bloc_gauche">
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
            {{ form_errors(form.plainPassword.second) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Mot de passe'}}) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Confirmez votre mot de passe'}}) }}
        </div>
        <div class="bloc_droite">
            {{ form_errors(form.siret) }}
            {{ form_widget(form.siret, {'attr': {'placeholder': 'N° de siret'}}) }}
            {{ form_errors(form.fileCV) }}
            {{ form_label(form.fileCV, 'Téléchargez votre CV') }}
            {{ form_widget(form.fileCV) }}
            {{ form_errors(form.fileMotivationLetter) }}
            {{ form_label(form.fileMotivationLetter, 'Téléchargez votre lettre de motivation') }}
            {{ form_widget(form.fileMotivationLetter) }}
        </div>
        {{ form_row(form._token) }}
        <div class="submit">
            <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </form>
</div>
